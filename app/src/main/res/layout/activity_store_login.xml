<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:layout_alignParentTop="true"
    tools:context="ucf.knightsdealistic.StoreLogin">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtstoreusername"
            android:hint="Store Name"
            android:enabled="true"
            android:editable="true"
            android:autoText="false"
            android:linksClickable="false"
            android:longClickable="false"
            android:layout_below="@+id/includeHeader"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/txtpassword"
            android:layout_gravity="center_horizontal"
            android:hint="Store Password"
            android:layout_below="@+id/txtstoreusername"/>

    <LinearLayout  android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/txtpassword"
        android:id="@+id/storeBtns">

    <LinearLayout  android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:id="@+id/btnsignin"
            style="@style/Button"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register"
            android:id="@+id/btnsignup"
            style="@style/Button"/>

</LinearLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change Password"
            android:id="@+id/btnChangePassword"
            style="@style/Button"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot password ?"
            android:id="@+id/btnForgotPassword"
            style="@style/Button"/>
    </LinearLayout>
</RelativeLayout>
